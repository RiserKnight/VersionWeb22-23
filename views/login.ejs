<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/styles/login.css">
    <link rel="stylesheet" href="/styles/navigation.css">
</head>
<body>
    <div class="nav-container">
        <div class="menu" id="menu">
            <div class="hamburger">
                <span class="line1"></span>
                <span class="line2"></span>
                <span class="line3"></span>
            </div>
        </div>
        <div class="version-logo">
            <img class="ver-logo" src="/images/version.png" alt="version-logo">
        </div>
    </div>
    <div class="overlay" id="overlay"></div>
    <%- include('partials/nav') %>
    <div class="login-container">
        <form class="login" method="post" action="/login">
            <div class="head">Sign in</div>
            <div class="details-container">
                <input type="text" name="userID" placeholder="User Id">
                <input type="password" name="passIN" placeholder="Password">
                <%if(failStatus){%>
                    <p>Incorrect Registration Number or Password</p>
                <%}%>
                <p class="forgot"><a href="#">Forgot Password?</a></p>
            </div>
            <div class="actions">
                <button type="submit">Sign in</button>
                <button type="button"><a href="/register">Haven't Registered? Click Here!</a></button>
            </div>
        </form>
    </div>
    <script src="/res/navigation.js"></script>
</body>
</html>